<body>
          <div class="header">
                <h1>SIMPLE TODO LISTS</h1>
                <h2>FROM RUBY GARAGE</h2>
                <% @projects.each do |project| %>
                <div class="project">
                       <div class="header_top">
                          <%= image_tag "notepad.gif" %>
                                <span><%= project.title %></span>
                             <div class="del_edit">
                              <%= image_tag "edit_proj.gif" %>
                              <%= image_tag "1.png" %>
                              <%= image_tag "del_proj.gif" %>
                             </div><!--end del_edit-->
                       </div><!--end header top-->
                       <div class="header_bot">
                         <%= image_tag "inp_img.gif" %>
                         <input type="text" size="50" placeholder="Start typing here to create a task...">
                         <button>Add Task</button>
                       </div><!--end header bot-->
                    <ul class="task_block">
                      <% project.tasks.each do |task| %>
                       <li class="task_line">
                         <div class="select_task">
                           <input type="checkbox">
                         </div><!--end select_task-->
                         <div class="name_task">
                           <p><%= task.task %></p>
                         </div><!--end name_task-->
                         <div class="edit_task">
                           <%= image_tag "leaf.png" %>
                           <%= image_tag "2.png" %>
                           <%= image_tag "edit_task.png" %>
                           <%= image_tag "2.png" %>
                           <%= image_tag "del_task.png" %>
                         </div><!--end edit_task-->
                       </li><!--end task_line-->
                      <% end %>
                    </ul><!--end task block-->
                </div><!--end project-->
                <% end %>
                  <div class="add_tl">
                    <button><%= image_tag "add_but_img.gif" %><span>Add TODO List</span></button>
                  </div>
            </div><!--end header-->             
    </body><!--end body-->