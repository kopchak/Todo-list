<% @projects.each do |project| %>
  <div class="project" id="<%= project.id %>">
    <div class="project_block">
      <image src="/assets/notepad.gif">
      <span class="project_name"><%= project.title %></span>
      <%= form_for project, remote: true do |f| %>
      <%= f.text_field :title, class: "project_input_text", size: "30" %>
      <%= f.submit "OK", class: "project_input_button" %>
      <% end %>
      <div class="project_toolbar">
        <input type="image" class="edit_project_img" src="/assets/edit_proj.gif">
        <image src="/assets/delimiter toolbar_project_img.png">
        <%= link_to image_tag("delete_project.gif"), project_path(project), remote: true, class: 'delete_project_img', method: :delete %>
      </div>
    </div>
    <div class="add_task_block">
      <image src="/assets/inp_img.gif">
      <%= form_for [project, @task], remote: true do |f| %>
      <%= f.text_field :title, class: "task_input_text", placeholder: "Start typing here to create a task...", size:"25" %>
      <%= f.date_field :date, class: "task_input_date" %>
      <%= f.submit "Add Task", class: "task_input_button" %>
      <% end %>
    </div>
    <ul class="task_list">
      <%= render 'tasks/tasks', project: project %>
    </ul>
  </div>
<% end %>